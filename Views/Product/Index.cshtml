@model List<AddingBootstrapInASPNETCore.Models.Product>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<div class="table table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Product Id</th>
                <th>Product Name</th>
                <th colspan="3"> Actions</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.ProductId</td>
                    <td>@product.Name </td>
                    <td class="text-center"><a href="#" class="btn btn-primary"> View</td>
                    <td class="text-center"><a href="#" class="btn btn-warning">Edit</td>
                    <td class="text-center"><a href="#" class="btn btn-danger">Delete</td>
                </tr>
            }

        </tbody>
    </table>
</div>
